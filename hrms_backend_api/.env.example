# PostgreSQL connection string (from hrms_database container)
# Example (preview):
#   POSTGRES_URL=postgresql+psycopg://appuser:dbuser123@localhost:5000/myapp
POSTGRES_URL=

# JWT signing secret (set to a long random string in real deployments)
JWT_SECRET_KEY=

# Optional JWT settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_TTL_MINUTES=30
REFRESH_TOKEN_TTL_MINUTES=43200

# Frontend origins allowed for CORS.
# For previews set this to the frontend preview URL, e.g.:
#   CORS_ALLOW_ORIGINS=https://vscode-internal-XXXXX-qa.qa01.cloud.kavia.ai:3000
# Comma-separated list, or "*" for all.
CORS_ALLOW_ORIGINS=*
